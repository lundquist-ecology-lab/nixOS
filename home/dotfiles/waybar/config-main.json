{
  "layer": "top",
  "output": "DP-6",
  "exclusive-zone": true,
  "position": "left",
  "width": 50,
  "spacing": 4,
  "margin-top": 10,
  "margin-left": 3,
  "margin-bottom": 10,
  "height": "calc(100% - 20px)",
  
  "modules-left": ["custom/polycat", "hyprland/workspaces"],
  "modules-right": ["cpu", "memory", "network", "pulseaudio", "bluetooth", "tray", "clock"],

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "sort-by-number": true
  },

  "cpu": {
    "interval": 5,
    "format": "󰻠",
    "tooltip-format": "CPU Usage: {usage}%\nCPU Frequency: {frequency}GHz"
  },
  "memory": {
    "interval": 10,
    "format": "󰍛",
    "tooltip-format": "RAM: {used:0.1f}GB/{total:0.1f}GB"
  },
  "network": {
    "format-wifi": "󰖩",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)"
  },
  "pulseaudio": {
    "format": "{icon}",
    "tooltip-format": "{desc} | {volume}%"
  },
  "bluetooth": {
    "format": "󰂯",
    "tooltip-format": "{device_enumerate}"
  },
  "clock": {
    "format": "{:%I\n%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>"
  },
  "tray": {
    "icon-size": 18,
    "spacing": 8
  }
}

