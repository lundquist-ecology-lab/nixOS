{
  "layer": "top",
  "output": "HDMI-A-1",
  "exclusive-zone": true,
  "position": "left",
  "width": 50,
  "spacing": 4,
  "margin-top": 10,
  "margin-left": 3,
  "margin-bottom": 10,
  "height": "calc(100% - 20px)",

  "modules-left": ["hyprland/workspaces"],
  "modules-right": ["clock"],

  "hyprland/workspaces": {
    "format": "{icon}",
    "sort-by-number": true
  },
  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>"
  }
}

